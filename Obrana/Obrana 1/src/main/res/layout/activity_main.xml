<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="413dp"
        android:layout_height="735dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/bmiTitle"
            android:layout_width="141dp"
            android:layout_height="30dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="18dp"
            android:text="BMI"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/bmiWeight"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="56dp"
            android:ems="10"
            android:hint="Weight(kg)"
            android:inputType="text"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/bmiSubmit"
            app:layout_constraintEnd_toEndOf="parent" />

        <EditText
            android:id="@+id/bmiHeight"
            android:layout_width="171dp"
            android:layout_height="53dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="56dp"
            android:ems="10"
            android:hint="Height(m)"
            android:inputType="text"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/bmiSubmit"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/bmiSubmit"
            android:layout_width="204dp"
            android:layout_height="59dp"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="36dp"
            android:text="Submit"
            app:layout_constraintBottom_toTopOf="@+id/bmiImage"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bmiResult"
            android:layout_width="199dp"
            android:layout_height="74dp"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="28dp"
            android:text="Score"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/bmiCategory"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/bmiImage"
            android:layout_width="133dp"
            android:layout_height="91dp"
            android:layout_marginStart="138dp"
            android:layout_marginBottom="49dp"
            app:layout_constraintBottom_toTopOf="@+id/bmiImageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:drawable/ic_dialog_info" />

        <Button
            android:id="@+id/bmiImageButton"
            android:layout_width="206dp"
            android:layout_height="70dp"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="21dp"
            android:text="Change Picture"
            app:layout_constraintBottom_toTopOf="@+id/bmiResult"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bmiCategory"
            android:layout_width="195dp"
            android:layout_height="64dp"
            android:layout_marginStart="101dp"
            android:layout_marginBottom="16dp"
            android:text="Category"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>